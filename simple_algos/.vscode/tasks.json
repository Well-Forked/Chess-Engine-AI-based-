{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "py3",
            "command": "python3 ${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true,
                "echo": true
            },
        }
    ]
}
